<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Sessions.EditSessionController"
            style="-fx-background-color: #1e293b;">

    <VBox alignment="TOP_CENTER" spacing="20"
          layoutX="300" layoutY="40"
          prefWidth="420"
          style="-fx-background-color: #0f172a;
                 -fx-padding: 30;
                 -fx-background-radius: 14;">

        <Label text="Edit Session"
               style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" />

        <Label text="Type"
               style="-fx-text-fill: #94a3b8; -fx-font-size: 14px;" />

        <ComboBox fx:id="cbType"
                  disable="true"
                  style="-fx-background-radius: 10;
                         -fx-background-color: #1e293b;
                         -fx-text-fill: white;" />

        <!-- COMMON -->
        <TextField fx:id="tfDuree" promptText="Durée (heures)"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white;
                          -fx-padding: 10; -fx-background-radius: 8;" />

        <DatePicker fx:id="dpDate"
                    promptText="Date"
                    style="-fx-background-radius: 8; -fx-background-color: #1e293b;
                           -fx-text-fill: white;" />

        <ComboBox fx:id="cbSalle"
                  promptText="Salle"
                  style="-fx-background-radius: 10;
                         -fx-background-color: #1e293b;
                         -fx-text-fill: white;" />

        <TextField fx:id="tfCout" promptText="Cout Horaire"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white;
                          -fx-padding: 10; -fx-background-radius: 8;" />

        <!-- Individual -->
        <VBox fx:id="panelIndividual" spacing="12" visible="false" managed="false">
            <Label text="Member"
                   style="-fx-text-fill: #94a3b8; -fx-font-size: 14px;" />
            <ComboBox fx:id="cbSingleMember"
                      style="-fx-background-radius: 10;
                             -fx-background-color: #1e293b;
                             -fx-text-fill: white;" />
        </VBox>

        <!-- Collective -->
        <VBox fx:id="panelCollective" spacing="12" visible="false" managed="false">

            <Label text="Coach"
                   style="-fx-text-fill: #94a3b8; -fx-font-size: 14px;" />
            <ComboBox fx:id="cbCoach"
                      style="-fx-background-radius: 10;
                             -fx-background-color: #1e293b;
                             -fx-text-fill: white;" />

            <Label text="Participants"
                   style="-fx-text-fill: #94a3b8; -fx-font-size: 14px;" />

            <ListView fx:id="lvMembers"
                      prefHeight="120"
                      style="-fx-background-color: #1e293b; -fx-text-fill: white;
                             -fx-background-radius: 8;" />

            <TextField fx:id="tfCapacite"
                       promptText="Capacité"
                       style="-fx-background-color: #1e293b; -fx-text-fill: white;
                              -fx-padding: 10; -fx-background-radius: 8;" />
        </VBox>

        <!-- ACTION BUTTONS -->
        <Button text="Update"
                onAction="#updateSession"
                style="-fx-background-color: #0ea5e9; -fx-text-fill: white;
                       -fx-padding: 10 20; -fx-background-radius: 8;" />

        <Button text="Cancel"
                onAction="#cancel"
                style="-fx-background-color: #dc2626; -fx-text-fill: white;
                       -fx-padding: 8 20; -fx-background-radius: 8;" />
    </VBox>
</AnchorPane>
