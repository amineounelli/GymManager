<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Sessions.AddSessionController"
            style="-fx-background-color: #1e293b; -fx-padding: 20;"
            prefWidth="900" prefHeight="700">

    <VBox spacing="12" layoutX="30" layoutY="20" prefWidth="760">

        <Label text="Create Session"
               style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />

        <HBox spacing="12">
            <VBox spacing="8" prefWidth="360">
                <Label text="Type" style="-fx-text-fill: #94a3b8;" />
                <ComboBox fx:id="typeCombo" prefWidth="340"/>

                <Label text="Duration (hours)" style="-fx-text-fill: #94a3b8; margin-top:6;" />
                <TextField fx:id="durationField" promptText="e.g. 1.5" style="-fx-background-color:#0f172a; -fx-text-fill:white;"/>

                <Label text="Date" style="-fx-text-fill: #94a3b8; margin-top:6;" />
                <DatePicker fx:id="dateField" />

                <Label text="Salle" style="-fx-text-fill: #94a3b8; margin-top:6;" />
                <ComboBox fx:id="salleCombo" prefWidth="340"/>

                <Label text="Cost per hour (DT)" style="-fx-text-fill: #94a3b8; margin-top:6;" />
                <TextField fx:id="costField" promptText="e.g. 20" />
            </VBox>

            <VBox spacing="8" prefWidth="360">
                <Label text="Members (select one or many)" style="-fx-text-fill: #94a3b8;" />
                <ListView fx:id="membersList" prefHeight="230" />

                <Label text="Coach (for collective)" style="-fx-text-fill: #94a3b8; margin-top:6;" />
                <ComboBox fx:id="coachCombo" prefWidth="340"/>

                <Label text="Capacity (for collective)" style="-fx-text-fill: #94a3b8; margin-top:6;" />
                <TextField fx:id="capacityField" promptText="e.g. 12" />

            </VBox>
        </HBox>

        <HBox spacing="10">
            <Button text="Save" onAction="#handleSave"
                    style="-fx-background-color: #059669; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius:8;"/>
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius:8;"/>
            <Label fx:id="lblInfo" style="-fx-text-fill: #94a3b8;" />
        </HBox>

    </VBox>
</AnchorPane>
