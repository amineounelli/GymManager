<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Sessions.SessionsController"
            style="-fx-background-color: #1e293b;"
            prefWidth="900" prefHeight="700">

    <Label text="Sessions"
           layoutX="30" layoutY="20"
           style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />

    <Button text="+ Add Session"
            layoutX="720" layoutY="20"
            onAction="#handleAddSession"
            style="-fx-background-color: #3b82f6; -fx-text-fill: white;
                   -fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-padding: 10 22; -fx-background-radius: 8;" />

    <ScrollPane layoutX="20" layoutY="80"
                prefWidth="860" prefHeight="600"
                style="-fx-background: transparent; -fx-background-color: transparent;"
                fitToWidth="true"
                hbarPolicy="NEVER">

        <VBox fx:id="cardsContainer"
              spacing="18"
              style="-fx-padding: 10;"
              prefWidth="820" />

    </ScrollPane>

</AnchorPane>
