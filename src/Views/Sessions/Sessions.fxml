<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #1e293b;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Sessions.SessionsController">

    <!-- TITLE + ADD BUTTON -->
    <HBox alignment="CENTER_LEFT" layoutX="30" layoutY="25" spacing="20">
        <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Sessions" />

        <Button onAction="#openAdd" style="-fx-background-color: #3b82f6; -fx-text-fill: white;                        -fx-padding: 10 20; -fx-background-radius: 8;" text="+ Add Session" />
    </HBox>

    <!-- SCROLLABLE CARDS -->
    <ScrollPane fitToWidth="true" layoutX="20" layoutY="80" prefHeight="680" prefWidth="960" style="-fx-background: DARK BLUE; -fx-border-width: 0;">
        <VBox fx:id="cardsContainer" prefWidth="880" spacing="20" style="-fx-padding: 10;" />
    </ScrollPane>

</AnchorPane>
