<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Coaches.AddCoachController"
            style="-fx-background-color: #1e293b;">

    <!-- Centered Card Container -->
    <VBox spacing="22" alignment="CENTER"
          layoutX="300" layoutY="80"
          style="-fx-background-color: #0f172a;
                 -fx-padding: 35;
                 -fx-background-radius: 14;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);"
          prefWidth="500">

        <Label text="Add New Coach"
               style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;" />

        <TextField fx:id="tfNom" promptText="Nom"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10;" />

        <TextField fx:id="tfPrenom" promptText="Prénom"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10;" />

        <TextField fx:id="tfEmail" promptText="Email"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10;" />

        <TextField fx:id="tfPhone" promptText="Téléphone"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10;" />

        <TextField fx:id="tfSpecialite" promptText="Spécialité"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10;" />

        <TextField fx:id="tfTarif" promptText="Tarif/H (DT)"
                   style="-fx-background-color: #1e293b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10;" />

        <Button text="Save" onAction="#saveCoach"
                style="-fx-background-color: #059669; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 12 20;" />

        <Button text="Cancel" onAction="#cancel"
                style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20;" />

    </VBox>

</AnchorPane>
