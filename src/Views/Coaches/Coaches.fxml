<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Coaches.CoachesController"
            style="-fx-background-color: #1e293b;">

    <VBox spacing="20" layoutX="30" layoutY="30">

        <!-- TITLE -->
        <Label text="Coaches"
               style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />

        <!-- ACTION BUTTONS -->
        <HBox spacing="12">
            <Button text="Add Coach"
                    onAction="#addCoach"
                    style="-fx-background-color: #059669; -fx-text-fill: white; -fx-padding: 10 16; -fx-background-radius: 8;" />

            <Button text="Edit Selected"
                    onAction="#editCoach"
                    style="-fx-background-color: #0ea5e9; -fx-text-fill: white; -fx-padding: 10 16; -fx-background-radius: 8;" />

            <Button text="Delete Selected"
                    onAction="#deleteCoach"
                    style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-padding: 10 16; -fx-background-radius: 8;" />
        </HBox>

        <!-- TABLE -->
        <TableView fx:id="coachesTable"
                   prefWidth="900"
                   style="-fx-background-color: #0f172a; -fx-text-fill: white;">

            <columns>

                <TableColumn text="ID" fx:id="colId" prefWidth="60"/>

                <TableColumn text="Nom" fx:id="colNom" prefWidth="140"/>

                <TableColumn text="Prénom" fx:id="colPrenom" prefWidth="140"/>

                <TableColumn text="Email" fx:id="colEmail" prefWidth="180"/>

                <TableColumn text="Téléphone" fx:id="colPhone" prefWidth="120"/>

                <TableColumn text="Spécialité" fx:id="colSpecialite" prefWidth="160"/>

                <TableColumn text="Tarif/H" fx:id="colTarif" prefWidth="100"/>

                <TableColumn text="Nb Séances"
                             fx:id="colNbSeances" prefWidth="120" />

                <TableColumn text="Revenu Est."
                             fx:id="colRevenu" prefWidth="120" />

            </columns>
        </TableView>

    </VBox>

</AnchorPane>
