<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            hbarPolicy="NEVER"
            style="-fx-background: #0f172a; -fx-background-color: #0f172a;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.SidebarController">

    <content>
        <VBox fx:id="sidebarRoot"
              prefWidth="192.0"
              spacing="20"
              style="-fx-background-color: #0f172a;">

            <padding>
                <Insets bottom="20" left="20" right="20" top="30"/>
            </padding>

            <!-- LOGO -->
            <VBox spacing="5">
                <Label text="ðŸ‹"
                       style="-fx-font-size: 40px; -fx-text-fill: linear-gradient(#06e4e4, #0bd468);"/>
            </VBox>

            <!-- NAVIGATION -->
            <VBox spacing="10">

                <Button text="Dashboard"    onAction="#goDashboard"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Managers"      onAction="#goManagers"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Members"      onAction="#goMembers"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>
                
                <Button text="Coaches"      onAction="#goCoaches"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Sessions"     onAction="#goSessions"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Reservations" onAction="#goReservations"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Programmes"   onAction="#goProgrammes"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Equipments"   onAction="#goEquipments"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Salles"       onAction="#goRooms"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Paiements"    onAction="#goPayments"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Abonnements"  onAction="#goAbonnements"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

                <Button text="Statistics"   onAction="#goStatistics"
                        style="-fx-background-color: transparent; -fx-text-fill: #e2e8f0; -fx-font-size: 15px; -fx-alignment: CENTER_LEFT; -fx-padding: 12 10;"/>

            </VBox>

            <!-- LOGOUT -->
            <VBox spacing="15" style="-fx-padding: 20 0 0 0;">
                <Button text="Sign Out" onAction="#logout"
                        style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-background-radius: 6; -fx-padding: 10 12; -fx-alignment: CENTER_LEFT;"/>
            </VBox>

        </VBox>
    </content>

</ScrollPane>
