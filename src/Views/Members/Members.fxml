<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.Members.MembersController"
            style="-fx-background-color: #1e293b;">

    <VBox spacing="20" layoutX="30" layoutY="30">

        <!-- TITLE -->
        <Label text="Members"
               style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />

        <!-- ACTION BUTTONS -->
        <HBox spacing="12">
            <Button text="Add Member"
                    onAction="#addMember"
                    style="-fx-background-color: #059669; -fx-text-fill: white;
                           -fx-padding: 10 16; -fx-background-radius: 8;" />

            <Button text="Edit Selected"
                    onAction="#editMember"
                    style="-fx-background-color: #0ea5e9; -fx-text-fill: white;
                           -fx-padding: 10 16; -fx-background-radius: 8;" />

            <Button text="Delete Selected"
                    onAction="#deleteMember"
                    style="-fx-background-color: #dc2626; -fx-text-fill: white;
                           -fx-padding: 10 16; -fx-background-radius: 8;" />
        </HBox>

        <!-- TABLE -->
        <TableView fx:id="membersTable"
                   prefWidth="900"
                   style="-fx-background-color: #0f172a; -fx-text-fill: white;">

            <columns>

                <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                <TableColumn fx:id="colNom" text="Nom" prefWidth="140" />
                <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="140" />
                <TableColumn fx:id="colEmail" text="Email" prefWidth="180" />
                <TableColumn fx:id="colPhone" text="Téléphone" prefWidth="120" />
                <TableColumn fx:id="colAbonnement" text="Abonnement" prefWidth="140" />
                <TableColumn fx:id="colNbSeances" text="Séances" prefWidth="100" />

            </columns>
        </TableView>

    </VBox>

</AnchorPane>
