<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.PlansController"
            style="-fx-background-color: #1e293b;">

    <VBox spacing="20" layoutX="30" layoutY="30">

        <Label text="Plans"
               style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold;"/>

        <TableView fx:id="plansTable" prefHeight="500"
                   style="-fx-background-color: #0f172a;">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                <TableColumn fx:id="colName" text="Plan Name" prefWidth="200"/>
                <TableColumn fx:id="colDuration" text="Duration" prefWidth="150"/>
                <TableColumn fx:id="colPrice" text="Price" prefWidth="120"/>
            </columns>
        </TableView>

        <HBox spacing="10">
            <Button text="Add Plan" onAction="#addPlan"
                    style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-background-radius: 6;"/>

            <Button text="Remove Selected" onAction="#removePlan"
                    style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-background-radius: 6;"/>
        </HBox>

    </VBox>
</AnchorPane>
